<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6817460"
    tools:context=".ProductDisplay">


    <ImageView
        android:id="@+id/productImage"
        android:layout_width="210dp"
        android:layout_height="250dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/images_desc" />

    <TextView
        android:id="@+id/productNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/productImage"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="6dp"
        android:layout_toEndOf="@+id/productImage"
        android:text="@string/plc_author"
        android:textAlignment="textStart"
        android:textColor="@color/listText"
        android:textSize="17sp" />


    <Button
        android:id="@+id/addProductBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productImage"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/addQtyBtn"
        android:background="@drawable/custom_button"
        android:padding="3dp"
        android:text="@string/add_product"
        android:textColor="@color/primaryText" />

    <Button
        android:id="@+id/checkoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cartBtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/custom_input_design"
        android:text="@string/check_out"
        android:textColor="@color/primaryText"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/lineSpacer"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/addQtyBtn"
        android:layout_marginTop="16dp"
        android:background="@color/border_shade"
        android:contentDescription="@string/border" />

    <TextView
        android:id="@+id/availabilityTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productNameTxt"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/productImage"
        android:text="Availability" />

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/addQtyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productImage"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:elevation="6dp"
        android:gravity="center"
        app:finalNumber="15"
        app:initialNumber="1">


    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


    <ImageView
        android:id="@+id/cartBtn"
        android:layout_width="43dp"
        android:layout_height="36dp"
        android:layout_below="@+id/descriptionTxt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />

    <ImageView
        android:id="@+id/moneyIcon"
        android:layout_width="43dp"
        android:layout_height="36dp"
        android:layout_below="@+id/descriptionTxt"
        android:layout_marginStart="53dp"
        android:layout_marginTop="55dp"
        android:layout_toEndOf="@+id/cartQty"
        app:srcCompat="@drawable/ic_baseline_attach_money_24" />

    <TextView
        android:id="@+id/priceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/availabilityTxt"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/productImage"
        android:text="Price" />

    <TextView
        android:id="@+id/qtyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceTxt"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/productImage"
        android:text="Quantity" />

    <TextView
        android:id="@+id/descriptionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addQtyBtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Description" />

    <TextView
        android:id="@+id/cartQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionTxt"
        android:layout_marginStart="7dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/primaryText"
        android:layout_toEndOf="@+id/cartBtn"
        android:text="TextView" />

    <TextView
        android:id="@+id/totalMoneyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionTxt"
        android:layout_marginStart="7dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/primaryText"
        android:layout_toEndOf="@+id/moneyIcon"
        android:text="TextView" />
</RelativeLayout>