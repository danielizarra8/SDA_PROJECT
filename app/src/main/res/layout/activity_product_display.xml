<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab2"
    tools:context="com.example.project_sda_2022.ProductDisplay">

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="210dp"
        android:layout_height="250dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/image_desc" />

    <TextView
        android:id="@+id/productNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/productImage"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="6dp"
        android:layout_toEndOf="@+id/productImage"
        android:fontFamily="@font/ubuntu_light"
        android:text=""
        android:textAlignment="textStart"
        android:textColor="@color/listText"
        android:textSize="17sp" />


    <Button
        android:id="@+id/addProductBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productImage"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/addQtyBtn"
        android:background="@drawable/btn_selector"
        android:padding="3dp"
        android:paddingTop="7dp"
        android:paddingEnd="7dp"
        android:text="@string/add_product"
        android:textColor="@color/tCustom" />

    <Button
        android:id="@+id/checkoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cartBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/custom_button"
        android:text="@string/check_out"
        android:textColor="@color/tabTextColor"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/lineSpacer"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/addQtyBtn"
        android:layout_marginTop="16dp"
        android:background="@color/border_shade"
        android:contentDescription="@string/border" />

    <TextView
        android:id="@+id/availabilityTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productNameTxt"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/ubuntu_light"
        android:layout_toEndOf="@+id/productImage"
        android:text="Availability" />

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/addQtyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productImage"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:elevation="6dp"
        android:gravity="center"
        app:finalNumber="15"
        app:initialNumber="1">


    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


    <ImageView
        android:id="@+id/cartBtn"
        android:layout_width="43dp"
        android:layout_height="36dp"
        android:layout_below="@+id/descriptionTxt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />

    <ImageView
        android:id="@+id/moneyIcon"
        android:layout_width="43dp"
        android:layout_height="36dp"
        android:layout_below="@+id/descriptionTxt"
        android:layout_marginStart="27dp"
        android:layout_marginTop="55dp"
        android:layout_toEndOf="@+id/cartQty"
        app:srcCompat="@drawable/ic_baseline_attach_money_24" />

    <ImageView
        android:id="@+id/deleteIcon"
        android:layout_width="43dp"
        android:layout_height="36dp"
        android:layout_below="@+id/descriptionTxt"
        android:layout_marginStart="27dp"
        android:layout_marginTop="55dp"
        android:layout_toEndOf="@+id/totalMoneyTxt"
        app:srcCompat="@drawable/ic_baseline_delete_24" />

    <TextView
        android:id="@+id/priceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/availabilityTxt"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/ubuntu_light"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/productImage"
        android:text="Price" />

    <TextView
        android:id="@+id/qtyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceTxt"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/ubuntu_light"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/productImage"
        android:text="Quantity" />

    <TextView
        android:id="@+id/openChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addQtyBtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/product_rev"
        android:textColor="@color/tCustom"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descriptionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/openChat"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/product_desc" />

    <TextView
        android:id="@+id/cartQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionTxt"
        android:layout_marginStart="7dp"
        android:textSize="16sp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/cartBtn"
        android:text="TextView"
        android:textColor="@color/listText" />

    <TextView
        android:id="@+id/totalMoneyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionTxt"
        android:layout_marginStart="7dp"
        android:textSize="16sp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/moneyIcon"
        android:text="TextView"
        android:textColor="@color/listText" />

</RelativeLayout>