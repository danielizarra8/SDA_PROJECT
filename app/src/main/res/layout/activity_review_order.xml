<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewOrder">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- A CardView that contains a TextView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="6dp"
                cardCornerRadius="4dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/ubuntu_light"
                    android:text="Order Summary"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/blueNavy"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/summaryTxt"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/listText"
                    android:text="Summary"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/ubuntu_light"
                    android:text="Delivery details"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deliveryDetailsTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/ubuntu_light"
                    android:text="delivery address"
                    android:textColor="@color/listText"
                    android:textSize="17sp" />

                <com.rey.material.widget.CheckBox
                    android:id="@+id/deliveryChkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="90dp"
                    android:checked="true"
                    android:fontFamily="@font/ubuntu_light"
                    android:text="Delivery to this address"
                    android:textColor="@color/colorAccent" />
                <EditText
                    android:id="@+id/changeAddressEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="50dp"
                    android:textSize="17sp"
                    android:visibility="gone"
                    android:textColor="@color/listText"
                    android:fontFamily="@font/ubuntu_light"                    android:text="sadasd"/>

                <Button
                    android:id="@+id/changeDeliveryDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginEnd="35dp"
                    android:background="@drawable/btn_selector"
                    android:text="Change Address"
                    android:textColor="@color/tabTextColor" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/textViewtitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/ubuntu_light"
                    android:text="Payment Details"
                    android:textStyle="bold"
                    android:textColor="@color/listText"
                    android:textAlignment="center"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/paymentDetails"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="payment details"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/addCardBtn"
                    android:layout_marginTop="130dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="35dp"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/tabTextColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add cart" />

                <ImageView
                    android:id="@+id/cartCheckedIcon"
                    android:layout_width="43dp"
                    android:layout_height="36dp"
                    android:layout_below="@+id/descriptionTxt"
                    android:layout_marginStart="145dp"
                    android:layout_marginTop="80dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_baseline_check_circle_24" />
                <TextView
                    android:id="@+id/paymentDetailsStatus"
                    android:layout_marginTop="90dp"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/tCustom"
                    android:text=""
                    android:textSize="17sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="4dp">
                <TextView
                    android:id="@+id/totalAmountCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="37dp"
                    android:fontFamily="@font/ubuntu_light"
                    android:text="Amount"
                    android:textAlignment="center"
                    android:textColor="@color/listText"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/totalQtyOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/totalAmountCart"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="65dp"
                    android:text="Qty"
                    android:fontFamily="@font/ubuntu_light"
                    android:textAlignment="center"
                    android:textColor="@color/listText"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/deliveryFeeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/totalQtyOrder"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="95dp"
                    android:text="Delivery fee"
                    android:fontFamily="@font/ubuntu_light"
                    android:textAlignment="center"
                    android:textColor="@color/listText"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/lineSpacerSummary"
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/pImage"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="120dp"
                    android:background="@color/border_shade"
                    android:contentDescription="@string/border" />
                <TextView
                    android:id="@+id/textViewTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="140dp"
                    android:text="Total"
                    android:textAlignment="center"
                    android:fontFamily="@font/ubuntu_light"
                    android:textStyle="bold"
                    android:textColor="@color/listText"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textViewtitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/ubuntu_light"
                    android:text="Order Summary"
                    android:textStyle="bold"
                    android:textColor="@color/colorTab"
                    android:textAlignment="center"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/totalAmountOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="140dp"
                    android:fontFamily="@font/ubuntu_light"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/fui_bgPhone"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
<!--
            <Button
                android:id="@+id/date"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="98dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_button"
                android:onClick="onDateClicked"
                android:text="Select Date"
                android:textColor="@color/primaryText"
                app:layout_constraintBaseline_toBaselineOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />
-->
            <Button
                android:id="@+id/sendOrderBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="40dp"
                android:enabled="false"
                android:layout_toEndOf="@+id/date"
                android:background="@drawable/btn_selector"
                android:text="Send Order"
                android:textColor="@color/tabTextColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                 />
        </LinearLayout>
    </ScrollView>

</LinearLayout>